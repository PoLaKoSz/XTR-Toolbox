<Window x:Class="XTR_Toolbox.Window5"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Junk File Cleaner" Height="754.375" Width="1069"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="pack://application:,,,/MaterialDesignThemes.Wpf;component/Resources/Roboto/#Roboto"
        WindowStartupLocation="CenterScreen" FontSize="16">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="150*" />
            <RowDefinition Height="55" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="74*" MaxWidth="284" />
            <ColumnDefinition Width="210" />
            <ColumnDefinition Width="41*" />
            <ColumnDefinition Width="210" />
        </Grid.ColumnDefinitions>
        <GroupBox Margin="10,5,10,8" Grid.Row="0" Grid.Column="0"
                  Style="{DynamicResource MaterialDesignCardGroupBox}"
                  materialDesign:ColorZoneAssist.Mode="PrimaryDark">
            <GroupBox.Header>
                <CheckBox Checked="CheckBoxAll_Checked" Unchecked="CheckBoxAll_Unchecked"
                          FontWeight="Bold"
                          Style="{DynamicResource MaterialDesignUserForegroundCheckBox}">
                    Directory
                </CheckBox>
            </GroupBox.Header>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="15" />
                    <RowDefinition Height="70" />
                </Grid.RowDefinitions>
                <ListBox x:Name="LbDir" SelectionChanged="LbSidebar_SelectionChanged"
                         DockPanel.Dock="Top">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <CheckBox Content="{Binding Text}" IsChecked="{Binding Checked}"
                                      IsEnabled="{Binding Enabled}" IsTabStop="False"
                                      d:DataContext="{d:DesignData ''}" />
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <Separator Grid.Row="1" Style="{StaticResource MaterialDesignDarkSeparator}" Margin="5,0" />
                <StackPanel Grid.Row="2" Margin="0,4">
                    <TextBlock Margin="0,0,0,5">Filter by extension</TextBlock>
                    <TextBox x:Name="TBoxTypes" materialDesign:HintAssist.Hint=".tmp, *.log" Margin="0,5,0,0" />
                </StackPanel>
            </Grid>
        </GroupBox>
        <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" Margin="10,0">
            <Label Content="Scan Depth Level:"
                   Margin="10,14,0,14" HorizontalAlignment="Left" VerticalAlignment="Center"
                   Height="27"
                   Width="167" />
            <ComboBox x:Name="CbBoxLevel" SelectedIndex="5" Margin="20,0,0,0" Width="50">
                <ComboBoxItem Content="0" />
                <ComboBoxItem Content="1" />
                <ComboBoxItem Content="2" />
                <ComboBoxItem Content="3" />
                <ComboBoxItem Content="4" />
                <ComboBoxItem Content="5" />
                <ComboBoxItem Content="Max" />
            </ComboBox>
        </StackPanel>
        <Label Content="Scan time: " HorizontalAlignment="Left" Margin="10,14,0,14" VerticalAlignment="Center"
               Grid.Row="1"
               Grid.Column="2" Height="27" />
        <Label x:Name="LabelScanValue" Content="" HorizontalAlignment="Left" Margin="102,14,0,14"
               VerticalAlignment="Center" Grid.Row="1"
               Grid.Column="2" Width="105" Height="27" />
        <ListView x:Name="LvCleaner" Margin="0,0,0,8" Grid.Column="1" Grid.Row="0" Grid.ColumnSpan="3"
                  SelectionChanged="LvCleaner_SelectionChanged">
            <ListView.View>
                <GridView AllowsColumnReorder="False">
                    <GridViewColumn DisplayMemberBinding="{Binding Path}" Width="520">
                        <GridViewColumn.Header>
                            <GridViewColumnHeader Tag="Path" Click="LvUsersColumnHeader_Click">Path</GridViewColumnHeader>
                        </GridViewColumn.Header>
                    </GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding Size}">
                        <GridViewColumn.Header>
                            <GridViewColumnHeader Tag="Size" Click="LvUsersColumnHeader_Click">File Size</GridViewColumnHeader>
                        </GridViewColumn.Header>
                    </GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding Extension}">
                        <GridViewColumn.Header>
                            <GridViewColumnHeader Tag="Extension" Click="LvUsersColumnHeader_Click">Extension</GridViewColumnHeader>
                        </GridViewColumn.Header>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
        <Button Margin="10,8,10,10" Click="BtnAnalyze_Click" Grid.Column="1" FontSize="18"
                Grid.Row="1"
                Height="Auto">
            <StackPanel Orientation="Horizontal" Margin="0,0,5,0">
                <materialDesign:PackIcon Kind="Magnify" Width="22" Height="22" Margin="0,0,10,0" />
                <TextBlock HorizontalAlignment="Right" FontWeight="Bold"
                           Margin="0,1,0,0">
                    Analyze
                </TextBlock>
            </StackPanel>
        </Button>
        <Button x:Name="BtnClean" Margin="10,8,10,10" Click="BtnClean_Click" Grid.Column="3"
                Grid.Row="1" Height="Auto" FontSize="18" FontWeight="Bold" IsEnabled="False">
            <StackPanel Orientation="Horizontal" Margin="0,0,5,0">
                <materialDesign:PackIcon Kind="Delete" Width="22" Height="22" Margin="0,0,10,0" />
                <TextBlock HorizontalAlignment="Right" FontWeight="Bold"
                           Margin="0,1,0,0">
                    Clean
                </TextBlock>
            </StackPanel>
        </Button>
    </Grid>
    <Window.CommandBindings>
        <CommandBinding Command="Close" Executed="OnCloseExecuted" />
    </Window.CommandBindings>
    <Window.InputBindings>
        <KeyBinding Command="Close" Key="Escape" />
    </Window.InputBindings>
</Window>