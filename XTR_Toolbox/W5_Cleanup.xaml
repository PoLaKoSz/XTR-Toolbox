<Window x:Class="XTR_Toolbox.Window5"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Junk File Cleaner" Height="754" Width="1070"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="pack://application:,,,/MaterialDesignThemes.Wpf;component/Resources/Roboto/#Roboto"
        WindowStartupLocation="CenterScreen" FontSize="16">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="120" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition MaxWidth="284" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <GroupBox Margin="10,5,10,8" Grid.Row="0" Grid.Column="0"
                  Style="{DynamicResource MaterialDesignCardGroupBox}"
                  materialDesign:ColorZoneAssist.Mode="PrimaryDark">
            <GroupBox.Header>
                <CheckBox Checked="CheckBoxAll_Checked" Unchecked="CheckBoxAll_Unchecked"
                          FontWeight="Bold" Style="{DynamicResource MaterialDesignUserForegroundCheckBox}"
                          Padding="4,0,0,0">
                    Directory
                </CheckBox>
            </GroupBox.Header>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="15" />
                    <RowDefinition Height="70" />
                </Grid.RowDefinitions>
                <ListBox x:Name="LbDir" SelectionChanged="LbSidebar_SelectionChanged"
                         DockPanel.Dock="Top">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <CheckBox Content="{Binding Text}" IsChecked="{Binding Checked}"
                                      IsEnabled="{Binding Enabled}" IsTabStop="False"
                                      d:DataContext="{d:DesignData ''}" />
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <Separator Grid.Row="1" Style="{StaticResource MaterialDesignDarkSeparator}" Margin="5,0" />
                <StackPanel Grid.Row="2" Margin="0,4">
                    <TextBlock Margin="0,0,0,5">Filter by extension</TextBlock>
                    <TextBox x:Name="TBoxTypes" materialDesign:HintAssist.Hint=".tmp, *.log" Margin="0,5,0,0" />
                </StackPanel>
            </Grid>
        </GroupBox>
        <Grid Grid.Row="1" Grid.Column="0" Margin="8">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <CheckBox x:Name="BtnGroup" Content="Show Groups (Impacts speed)" Margin="10,2" Height="26" />
            <DockPanel Grid.Row="1" Margin="10,0">
                <Label Content="Scan Depth Level:"
                       Margin="0" VerticalAlignment="Center" />
                <ComboBox x:Name="CbBoxLevel" SelectedIndex="5" Margin="0" Width="50" VerticalAlignment="Center"
                          HorizontalAlignment="Right">
                    <ComboBoxItem Content="0" />
                    <ComboBoxItem Content="1" />
                    <ComboBoxItem Content="2" />
                    <ComboBoxItem Content="3" />
                    <ComboBoxItem Content="4" />
                    <ComboBoxItem Content="5" />
                    <ComboBoxItem Content="20" />
                </ComboBox>
            </DockPanel>
            <DockPanel Grid.Row="2" Margin="10,3">
                <Label Content="Scan Time: " FontWeight="Bold" VerticalAlignment="Center" />
                <Label x:Name="LabelScanValue" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Right"
                       HorizontalContentAlignment="Right" />
            </DockPanel>
        </Grid>
        <ListView x:Name="LvCleaner" Grid.Column="1" Grid.Row="0" Grid.RowSpan="2"
                  SelectionChanged="LvCleaner_SelectionChanged">
            <ListView.GroupStyle>
                <GroupStyle>
                    <GroupStyle.ContainerStyle>
                        <Style TargetType="{x:Type GroupItem}">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate>
                                        <Expander IsExpanded="True">
                                            <Expander.Header>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="{Binding Name}" FontWeight="Bold"
                                                               Foreground="Brown" FontSize="16" />
                                                    <TextBlock Text="{Binding ItemCount}" FontSize="16"
                                                               FontWeight="Bold" Margin="10,0,0,0" />
                                                    <TextBlock Text=" item(s) found" FontSize="16" />
                                                </StackPanel>
                                            </Expander.Header>
                                            <ItemsPresenter />
                                        </Expander>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </GroupStyle.ContainerStyle>
                </GroupStyle>
            </ListView.GroupStyle>
            <ListView.View>
                <GridView AllowsColumnReorder="False">
                    <GridViewColumn DisplayMemberBinding="{Binding Path}" Width="520">
                        <GridViewColumn.Header>
                            <GridViewColumnHeader Tag="Path" Click="LvUsersColumnHeader_Click" Content="File Path"/>
                        </GridViewColumn.Header>
                    </GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding Size}">
                        <GridViewColumnHeader Tag="Size" Click="LvUsersColumnHeader_Click" Content="File Size" />
                    </GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding Extension}">
                        <GridViewColumnHeader Tag="Extension" Click="LvUsersColumnHeader_Click" Content="Extension" />
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
        <materialDesign:Snackbar MessageQueue="{materialDesign:MessageQueue}" x:Name="MainSnackbar" Grid.Row="1"
                                 Grid.Column="1" IsTabStop="False" />
        <StackPanel Grid.Row="0" Grid.Column="1" Grid.RowSpan="2" HorizontalAlignment="Right"
                    VerticalAlignment="Bottom" Margin="0,0,30,19">
            <Button x:Name="BtnAnalyze" Click="BtnAnalyze_Click"
                    Style="{DynamicResource MaterialDesignFloatingActionButton}"
                    ToolTip="Start Scan" Margin="8">
                <materialDesign:PackIcon Kind="Magnify" Width="24" Height="24" />
            </Button>
            <Button x:Name="BtnClean" Click="BtnClean_Click"
                    Style="{DynamicResource MaterialDesignFloatingActionButton}" IsEnabled="False"
                    ToolTip="Delete Selected Files" Margin="8">
                <materialDesign:PackIcon Kind="Delete" Width="24" Height="24" />
            </Button>
        </StackPanel>
    </Grid>
    <Window.CommandBindings>
        <CommandBinding Command="Close" Executed="OnCloseExecuted" />
    </Window.CommandBindings>
    <Window.InputBindings>
        <KeyBinding Command="Close" Key="Escape" />
    </Window.InputBindings>
</Window>