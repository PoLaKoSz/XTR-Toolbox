<Window x:Class="XTR_Toolbox.Window5"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="File Cleaner (Scanner)" Height="769.375" Width="1069"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="pack://application:,,,/MaterialDesignThemes.Wpf;component/Resources/Roboto/#Roboto"
        WindowStartupLocation="CenterScreen" FontSize="14">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="150*" />
            <RowDefinition Height="170*" />
            <RowDefinition Height="55" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="74*" MaxWidth="284" />
            <ColumnDefinition Width="221" />
            <ColumnDefinition Width="41*" />
            <ColumnDefinition Width="222" />
        </Grid.ColumnDefinitions>
        <Button Margin="10,8,10,10" Click="BtnAnalyze_Click" Grid.Column="1"
                Grid.Row="2"
                Height="Auto">
            <StackPanel Orientation="Horizontal">
                <Canvas Width="65" Height="20">
                    <Path
                        Data="M9.5,3A6.5,6.5 0 0,1 16,9.5C16,11.11 15.41,12.59 14.44,13.73L14.71,14H15.5L20.5,19L19,20.5L14,15.5V14.71L13.73,14.44C12.59,15.41 11.11,16 9.5,16A6.5,6.5 0 0,1 3,9.5A6.5,6.5 0 0,1 9.5,3M9.5,5C7,5 5,7 5,9.5C5,12 7,14 9.5,14C12,14 14,12 14,9.5C14,7 12,5 9.5,5Z"
                        Fill="White" HorizontalAlignment="Left" Margin="0" Canvas.Left="-15" Canvas.Top="-2" />
                    <TextBlock HorizontalAlignment="Right" FontWeight="Bold" FontSize="16" Canvas.Left="15"
                               Margin="0,1,0,0">
                        Analyze
                    </TextBlock>
                </Canvas>
            </StackPanel>
        </Button>
        <Button Margin="10,8,10,10" Click="BtnClean_Click" Grid.Column="3"
                Grid.Row="2" Height="Auto" FontSize="16" FontWeight="Bold">
            <StackPanel Orientation="Horizontal">
                <Canvas Width="45" Height="20">
                    <Path
                        Data="M19,4H15.5L14.5,3H9.5L8.5,4H5V6H19M6,19A2,2 0 0,0 8,21H16A2,2 0 0,0 18,19V7H6V19Z"
                        Fill="White" HorizontalAlignment="Left" Margin="0" Canvas.Left="-15" Canvas.Top="-2" />
                    <TextBlock HorizontalAlignment="Right" FontWeight="Bold" FontSize="16" Canvas.Left="15"
                               Margin="0,1,0,0">
                        Clean
                    </TextBlock>
                </Canvas>
            </StackPanel>
        </Button>
        <ListView x:Name="LvCleaner" Margin="0" Grid.Column="1" Grid.Row="0" Grid.RowSpan="2" Grid.ColumnSpan="3">
            <ListView.View>
                <GridView AllowsColumnReorder="False">
                    <GridViewColumn DisplayMemberBinding="{Binding Path}">
                        <GridViewColumn.Header>
                            <GridViewColumnHeader Tag="Path" Click="LvUsersColumnHeader_Click">Path</GridViewColumnHeader>
                        </GridViewColumn.Header>
                    </GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding Size}">
                        <GridViewColumn.Header>
                            <GridViewColumnHeader Tag="Size" Click="LvUsersColumnHeader_Click">File Size</GridViewColumnHeader>
                        </GridViewColumn.Header>
                    </GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding Extension}">
                        <GridViewColumn.Header>
                            <GridViewColumnHeader Tag="Extension" Click="LvUsersColumnHeader_Click">Extension</GridViewColumnHeader>
                        </GridViewColumn.Header>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
        <Label Content="Scan Depth Level:" Grid.Row="2"
               Grid.Column="0" Margin="10,14,0,14" HorizontalAlignment="Left" VerticalAlignment="Center" Height="27"
               Width="119" />
        <ComboBox x:Name="CbBoxLevel" SelectedIndex="5" Grid.Row="2"
                  Grid.Column="0" Width="47" Margin="0,13,10,13" HorizontalAlignment="Right" Height="29">
            <ComboBoxItem Content="0" />
            <ComboBoxItem Content="1" />
            <ComboBoxItem Content="2" />
            <ComboBoxItem Content="3" />
            <ComboBoxItem Content="4" />
            <ComboBoxItem Content="5" />
            <ComboBoxItem Content="Max" />
        </ComboBox>
        <Label Content="Scan time: " HorizontalAlignment="Left" Margin="10,14,0,14" VerticalAlignment="Center"
               Grid.Row="2"
               Grid.Column="2" Height="27" Width="77" />
        <GroupBox Grid.Row="0" Grid.Column="0" Margin="10,8,10,5"
                  Style="{DynamicResource MaterialDesignCardGroupBox}"
                  materialDesign:ColorZoneAssist.Mode="PrimaryDark">
            <GroupBox.Header>
                <CheckBox x:Name="CbDir" Checked="CheckBoxAll_Checked" Unchecked="CheckBoxAll_Unchecked"
                          Foreground="White"
                          FontWeight="Bold">
                    Directory
                </CheckBox>
            </GroupBox.Header>
            <ListBox x:Name="LbDir" SelectionChanged="LbSidebar_SelectionChanged">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <CheckBox Content="{Binding Text}" IsChecked="{Binding Checked}"
                                  d:DataContext="{d:DesignData }" IsTabStop="False" />
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </GroupBox>
        <GroupBox Margin="10,5,10,8" Grid.Row="1" Grid.Column="0"
                  Style="{DynamicResource MaterialDesignCardGroupBox}"
                  materialDesign:ColorZoneAssist.Mode="PrimaryDark">
            <GroupBox.Header>
                <CheckBox x:Name="CbType" Checked="CheckBoxAll_Checked" Unchecked="CheckBoxAll_Unchecked"
                          Foreground="White"
                          FontWeight="Bold">
                    Extension
                </CheckBox>
            </GroupBox.Header>
            <ListBox x:Name="LbType" SelectionChanged="LbSidebar_SelectionChanged">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <CheckBox Content="{Binding Text}" IsChecked="{Binding Checked}"
                                  d:DataContext="{d:DesignData }" IsTabStop="False" />
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </GroupBox>
        <Label x:Name="LabelScanValue" Content="" HorizontalAlignment="Left" Margin="92,14,0,14"
               VerticalAlignment="Center" Grid.Row="2"
               Grid.Column="2" Width="87" Height="27" />
    </Grid>
    <Window.CommandBindings>
        <CommandBinding Command="Close" Executed="OnCloseExecuted" />
    </Window.CommandBindings>
    <Window.InputBindings>
        <KeyBinding Command="Close" Key="Escape" />
    </Window.InputBindings>
</Window>